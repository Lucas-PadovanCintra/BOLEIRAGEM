<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-dark">Editar Partida #<%= @match.id %></h1>
        <div class="btn-group">
          <%= link_to "Ver Partida", @match, class: "btn btn-outline-primary" %>
          <%= link_to "Voltar às Partidas", matches_path, class: "btn btn-secondary" %>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with(model: @match, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <% if @match.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  <%= pluralize(@match.errors.count, "erro impediu", "erros impediram") %> que esta partida fosse salva:
                </h4>
                <ul class="mb-0">
                  <% @match.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row g-3">
              <!-- Match Information Section -->
              <div class="col-12">
                <h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
                  <i class="fas fa-info-circle me-2"></i>Informações da Partida
                </h5>
              </div>

              <!-- Match ID (Read-only) -->
              <div class="col-md-6">
                <label class="form-label fw-medium">ID da Partida</label>
                <input type="text" class="form-control" value="#<%= @match.id %>" disabled>
                <small class="form-text text-muted">Identificador único da partida</small>
              </div>

              <!-- Created Date (Read-only) -->
              <div class="col-md-6">
                <label class="form-label fw-medium">Data de Criação</label>
                <input type="text" class="form-control" value="<%= @match.created_at.strftime("%d de %B de %Y às %H:%M") %>" disabled>
                <small class="form-text text-muted">Quando a partida foi criada</small>
              </div>

              <!-- Teams Information (Read-only) -->
              <div class="col-12">
                <label class="form-label fw-medium">Times</label>
                <div class="card bg-light">
                  <div class="card-body py-2">
                    <% if @match.teams.any? %>
                      <div class="d-flex align-items-center justify-content-center">
                        <% @match.teams.each_with_index do |team, index| %>
                          <span class="badge bg-primary me-2"><%= team.name %></span>
                          <% if index < @match.teams.count - 1 %>
                            <span class="text-muted me-2">vs</span>
                          <% end %>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-muted">Nenhum time associado</span>
                    <% end %>
                  </div>
                </div>
                <small class="form-text text-muted">Times participantes desta partida</small>
              </div>

              <!-- Result Field (Editable) -->
              <div class="col-12">
                <h5 class="fw-bold text-dark mb-3 border-bottom pb-2 mt-4">
                  <i class="fas fa-edit me-2"></i>Resultado da Partida
                </h5>
              </div>

              <div class="col-12">
                <%= form.label :result, "Resultado", class: "form-label fw-medium required" %>
                <%= form.select :result, 
                    options_for_select([
                      ['Pendente', ''],
                      ['Vitória', 'Vitória'],
                      ['Derrota', 'Derrota'], 
                      ['Empate', 'Empate']
                    ], @match.result), 
                    { prompt: 'Selecione o resultado...' }, 
                    { 
                      class: "form-select #{'is-invalid' if @match.errors[:result].any?}",
                      required: false
                    } 
                %>
                <% if @match.errors[:result].any? %>
                  <div class="invalid-feedback">
                    <%= @match.errors[:result].first %>
                  </div>
                <% else %>
                  <small class="form-text text-muted">
                    Deixe em branco ou selecione "Pendente" se a partida ainda não foi jogada
                  </small>
                <% end %>
              </div>

              <!-- Action Buttons -->
              <div class="col-12 mt-4">
                <div class="d-flex gap-2 justify-content-end flex-wrap">
                  <%= form.submit "Salvar Alterações", class: "btn btn-success" %>
                  <%= link_to "Cancelar", match_path(@match), class: "btn btn-outline-secondary" %>
                  <%= link_to "Excluir Partida", @match, 
                      data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta partida? Esta ação não pode ser desfeita." },
                      class: "btn btn-outline-danger" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Help Section -->
      <div class="card mt-4 border-info">
        <div class="card-body">
          <h6 class="card-title fw-bold text-info">
            <i class="fas fa-question-circle me-2"></i>Ajuda
          </h6>
          <ul class="mb-0 small">
            <li>Use <strong>"Vitória"</strong> se o time ganhou a partida</li>
            <li>Use <strong>"Derrota"</strong> se o time perdeu a partida</li>
            <li>Use <strong>"Empate"</strong> se a partida terminou empatada</li>
            <li>Deixe <strong>"Pendente"</strong> se a partida ainda não foi jogada</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>