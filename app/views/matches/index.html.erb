<div class="container py-4">
  <div class="mb-4">
    <h1 class="h2 fw-bold text-dark">
      <i class="fas fa-users me-2 text-primary"></i>Partidas
    </h1>
    <p class="text-muted mb-0">Encontre adversários e viva sua história</p>
  </div>

  <!-- Matchmaking Section -->
  <% if @user_teams.any? %>
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title fw-bold mb-3">
          <i class="fas fa-gamepad me-2"></i>Competição Automática
        </h5>

        <% if Rails.env.development? %>
          <!-- Debug info -->
          <div class="small text-muted mb-2">
            Debug: Teams count: <%= @user_teams.count %> |
            Selected: <%= @selected_team&.name %> |
            In Queue: <%= @in_queue %> |
            Active players: <%= @selected_team&.active_players&.count %> |
            Total players: <%= @selected_team&.players&.count %>
          </div>
        <% end %>

        <% if @user_teams.any? { |team| team.active_players.count > 0 } %>
          <% if @in_queue && @selected_team %>
            <div class="alert alert-info mb-0">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <i class="fas fa-hourglass-half me-2"></i>
                  <strong><%= @selected_team.name %> está na fila de espera!</strong> Aguardando outro jogador disponibilizar seu time para competir.
                </div>
                <%= form_with url: remove_from_queue_matches_path, method: :delete, local: true, class: "d-inline" do |f| %>
                  <%= f.hidden_field :team_id, value: @selected_team.id %>
                  <%= f.submit "Remover da Fila",
                      class: "btn btn-danger btn-sm",
                      data: { turbo_confirm: "Tem certeza que deseja remover o time da fila?" } %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="row align-items-end">
              <div class="col-md-8">
                <%= form_with url: matches_path, method: :get, local: true, class: "d-flex align-items-end gap-3" do |f| %>
                  <div class="flex-grow-1">
                    <%= f.label :team_id, "Selecione seu time:", class: "form-label fw-bold" %>
                    <%= f.select :team_id,
                        options_for_select(
                          @user_teams.select { |t| t.active_players.count > 0 }.map { |t|
                            ["#{t.name} (#{t.active_players.count} jogadores)", t.id]
                          },
                          @selected_team&.id
                        ),
                        { prompt: @user_teams.none? { |t| t.active_players.count > 0 } ? "Nenhum time com jogadores ativos" : nil },
                        class: "form-select",
                        onchange: "this.form.submit()" %>
                  </div>
                <% end %>
              </div>
              <div class="col-md-4">
                <% if @selected_team && @selected_team.active_players.count > 0 %>
                  <%= form_with url: make_available_matches_path, method: :post, local: true do |f| %>
                    <%= f.hidden_field :team_id, value: @selected_team.id %>
                    <%= f.submit "Disponibilizar para Competir",
                        class: "btn btn-success w-100",
                        data: { turbo_confirm: "Seu time será adicionado à fila de espera para competir automaticamente. Continuar?" } %>
                  <% end %>
                <% end %>
              </div>
            </div>

            <% if @selected_team && @selected_team.active_players.count == 0 %>
              <div class="alert alert-warning mt-3 mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Time sem jogadores ativos!</strong> Todos os contratos expiraram. Contrate novos jogadores antes de disponibilizar para competição.
                <%= link_to "Contratar Jogadores", players_path, class: "btn btn-warning btn-sm ms-2" %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="alert alert-warning mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Nenhum time com jogadores ativos!</strong> Todos os seus times precisam ter pelo menos um jogador com contrato ativo para competir.
            <%= link_to "Contratar Jogadores", players_path, class: "btn btn-warning btn-sm ms-2" %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info mb-4">
      <i class="fas fa-info-circle me-2"></i>
      <strong>Você ainda não tem times!</strong> Crie um time primeiro para poder competir.
      <%= link_to "Criar Time", new_team_path, class: "btn btn-primary btn-sm ms-2" %>
    </div>
  <% end %>

  <!-- Match History -->
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0 fw-bold">
        <i class="fas fa-history me-2"></i>Histórico de Partidas
      </h5>
    </div>
    <div class="card-body">
      <% if @matches.any? %>
        <div class="row g-4">
          <% @matches.each do |match| %>
            <div class="col-lg-6">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <h6 class="card-title fw-bold text-dark">Partida #<%= match.id %></h6>
                    <% if match.is_simulated %>
                      <% if match.draw? %>
                        <span class="badge bg-warning text-dark">Empate</span>
                      <% elsif match.winner_team && match.winner_team.user_id == current_user.id %>
                        <span class="badge bg-success">Vitória</span>
                      <% else %>
                        <span class="badge bg-danger">Derrota</span>
                      <% end %>
                    <% else %>
                      <span class="badge bg-secondary">Pendente</span>
                    <% end %>
                  </div>

                  <div class="mb-3">
                    <div class="row text-center">
                      <div class="col-5">
                        <div class="fw-bold text-dark"><%= match.team1&.name || "Time 1" %></div>
                        <% if match.is_simulated %>
                          <div class="h4 mt-1 text-primary"><%= match.team1_score || 0 %></div>
                        <% else %>
                          <small class="text-muted">Aguardando</small>
                        <% end %>
                      </div>
                      <div class="col-2">
                        <div class="mt-2">VS</div>
                      </div>
                      <div class="col-5">
                        <div class="fw-bold text-dark"><%= match.team2&.name || "Time 2" %></div>
                        <% if match.is_simulated %>
                          <div class="h4 mt-1 text-primary"><%= match.team2_score || 0 %></div>
                        <% else %>
                          <small class="text-muted">Aguardando</small>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <div class="d-flex justify-content-between align-items-center text-muted small">
                    <span><i class="fas fa-calendar me-1"></i><%= match.created_at.strftime("%d/%m/%Y") %></span>
                    <span><i class="fas fa-clock me-1"></i><%= match.created_at.strftime("%H:%M") %></span>
                  </div>
                </div>
                <div class="card-footer bg-transparent">
                  <%= link_to "Ver Detalhes", match, class: "btn btn-outline-primary btn-sm w-100" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-futbol text-muted" style="font-size: 4rem;"></i>
          </div>
          <h3 class="h4 fw-medium text-dark mb-2">Nenhuma partida jogada ainda</h3>
          <p class="text-muted mb-4">Disponibilize seu time para competir automaticamente!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
