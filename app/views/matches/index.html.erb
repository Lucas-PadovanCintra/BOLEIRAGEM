<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-dark">Histórico de Partidas</h1>
    <div>
      <%= link_to "Nova Simulação", new_simulation_matches_path, class: "btn btn-success" %>
      <%= link_to "Agendar Nova Partida", new_match_path, class: "btn btn-primary ms-2" %>
    </div>
  </div>

  <!-- Match Filters -->
  <div class="mb-4">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-success btn-sm">Todas as Partidas</button>
      <button type="button" class="btn btn-outline-secondary btn-sm">Vitórias</button>
      <button type="button" class="btn btn-outline-secondary btn-sm">Derrotas</button>
      <button type="button" class="btn btn-outline-secondary btn-sm">Pendentes</button>
    </div>
  </div>

  <% if @matches.any? %>
    <div class="row g-4">
      <% @matches.each do |match| %>
        <div class="col-lg-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="card-title fw-bold text-dark">Partida #<%= match.id %></h5>
                <% if match.is_simulated %>
                  <span class="badge bg-info">Simulada</span>
                <% elsif match.result.present? %>
                  <% case match.result.downcase %>
                  <% when 'won', 'win' %>
                    <span class="badge bg-success">Vitória</span>
                  <% when 'lost', 'loss' %>
                    <span class="badge bg-danger">Derrota</span>
                  <% when 'draw', 'tie' %>
                    <span class="badge bg-warning text-dark">Empate</span>
                  <% else %>
                    <span class="badge bg-primary"><%= match.result %></span>
                  <% end %>
                <% else %>
                  <span class="badge bg-secondary">Pendente</span>
                <% end %>
              </div>
              
              <div class="mb-3">
                <div class="row text-center">
                  <div class="col-5">
                    <div class="fw-bold text-dark"><%= match.team1&.name || "Time 1" %></div>
                    <% if match.is_simulated %>
                      <div class="h4 mt-1 text-primary"><%= match.team1_score || 0 %></div>
                    <% else %>
                      <small class="text-muted">Time da Casa</small>
                    <% end %>
                  </div>
                  <div class="col-2">
                    <div class="mt-2">VS</div>
                  </div>
                  <div class="col-5">
                    <div class="fw-bold text-dark"><%= match.team2&.name || "Time 2" %></div>
                    <% if match.is_simulated %>
                      <div class="h4 mt-1 text-primary"><%= match.team2_score || 0 %></div>
                    <% else %>
                      <small class="text-muted">Time Visitante</small>
                    <% end %>
                  </div>
                </div>
                <% if match.is_simulated && match.winner_team %>
                  <div class="text-center mt-2">
                    <small class="text-success fw-bold">Vencedor: <%= match.winner_team.name %></small>
                  </div>
                <% elsif match.is_simulated && match.draw? %>
                  <div class="text-center mt-2">
                    <small class="text-warning fw-bold">Empate</small>
                  </div>
                <% end %>
              </div>

              <div class="d-flex justify-content-between align-items-center text-muted small">
                <span><i class="fas fa-calendar me-1"></i><%= match.created_at.strftime("%d de %B de %Y") %></span>
                <span><i class="fas fa-clock me-1"></i><%= match.created_at.strftime("%H:%M") %></span>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <div class="btn-group w-100">
                <%= link_to "Ver Detalhes", match, class: "btn btn-outline-primary btn-sm" %>
                <%= link_to "Editar", edit_match_path(match), class: "btn btn-outline-warning btn-sm" %>
                <%= link_to "Excluir", match, 
                    data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta partida?" }, 
                    class: "btn btn-outline-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-futbol text-muted" style="font-size: 4rem;"></i>
      </div>
      <h3 class="h4 fw-medium text-dark mb-2">Nenhuma partida jogada ainda</h3>
      <p class="text-muted mb-4">Agende sua primeira partida para começar a competir!</p>
      <%= link_to "Agendar Primeira Partida", new_match_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
