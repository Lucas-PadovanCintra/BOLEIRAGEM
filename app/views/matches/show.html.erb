<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-dark">Partida #<%= @match.id %></h1>
    <div class="btn-group">
      <%= link_to "Editar Partida", edit_match_path(@match), class: "btn btn-warning" %>
      <%= link_to "Voltar às Partidas", matches_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <% if @match.is_simulated %>
    <!-- Simulated Match Result -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card shadow-sm bg-primary text-white">
          <div class="card-body">
            <div class="text-center mb-3">
              <span class="badge bg-light text-dark">PARTIDA SIMULADA</span>
            </div>
            <div class="row align-items-center">
              <div class="col-md-4 text-center">
                <h3 class="fw-bold mb-1"><%= @match.team1&.name || "Time 1" %></h3>
                <div class="display-1 fw-bold"><%= @match.team1_score || 0 %></div>
              </div>
              <div class="col-md-4 text-center">
                <div class="fs-3 fw-bold">VS</div>
                <div class="mt-3">
                  <% if @match.draw? %>
                    <span class="badge bg-warning text-dark fs-5">EMPATE</span>
                  <% elsif @match.winner_team %>
                    <span class="badge bg-success fs-5">VENCEDOR</span>
                    <div class="mt-2 fs-6"><%= @match.winner_team.name %></div>
                  <% end %>
                </div>
              </div>
              <div class="col-md-4 text-center">
                <h3 class="fw-bold mb-1"><%= @match.team2&.name || "Time 2" %></h3>
                <div class="display-1 fw-bold"><%= @match.team2_score || 0 %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Simulation Statistics -->
    <% if @match.simulation_stats.present? %>
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title fw-bold text-dark mb-3">Estatísticas - <%= @match.team1&.name %></h5>
            <div class="row g-2">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Força Total:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team1_strength'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Poder de Ataque:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team1_attack'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Poder de Defesa:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team1_defense'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Controle de Meio-campo:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team1_midfield'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Força Final (com aleatoriedade):</span>
                  <span class="fw-bold text-primary"><%= @match.simulation_stats['team1_final_strength'] %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title fw-bold text-dark mb-3">Estatísticas - <%= @match.team2&.name %></h5>
            <div class="row g-2">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Força Total:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team2_strength'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Poder de Ataque:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team2_attack'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Poder de Defesa:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team2_defense'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Controle de Meio-campo:</span>
                  <span class="fw-medium"><%= @match.simulation_stats['team2_midfield'] %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Força Final (com aleatoriedade):</span>
                  <span class="fw-bold text-primary"><%= @match.simulation_stats['team2_final_strength'] %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <!-- Regular Match (not simulated) -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card shadow-sm bg-primary text-white">
          <div class="card-body text-center">
            <div class="row align-items-center">
              <div class="col-md-4">
                <h3 class="fw-bold mb-1"><%= @match.team1&.name || "Time 1" %></h3>
                <small class="opacity-75">Time da Casa</small>
              </div>
              <div class="col-md-4">
                <div class="fs-1 fw-bold">VS</div>
                <div class="mt-2">
                  <% if @match.result.present? %>
                    <% case @match.result.downcase %>
                    <% when 'won', 'win' %>
                      <span class="badge bg-success fs-6">Vitória!</span>
                    <% when 'lost', 'loss' %>
                      <span class="badge bg-danger fs-6">Derrota</span>
                    <% when 'draw', 'tie' %>
                      <span class="badge bg-warning text-dark fs-6">Empate</span>
                    <% else %>
                      <span class="badge bg-light text-dark fs-6"><%= @match.result %></span>
                    <% end %>
                  <% else %>
                    <span class="badge bg-secondary fs-6">Pendente</span>
                  <% end %>
                </div>
              </div>
              <div class="col-md-4">
                <h3 class="fw-bold mb-1"><%= @match.team2&.name || "Time 2" %></h3>
                <small class="opacity-75">Time Visitante</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Match Details -->
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark mb-3">Informações da Partida</h5>
          <div class="row g-2">
            <div class="col-12">
              <div class="d-flex justify-content-between">
                <span class="text-muted">ID da Partida:</span>
                <span class="fw-medium">#<%= @match.id %></span>
              </div>
            </div>
            <div class="col-12">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Time 1:</span>
                <span class="fw-medium"><%= @match.team1&.name || "Não definido" %></span>
              </div>
            </div>
            <div class="col-12">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Time 2:</span>
                <span class="fw-medium"><%= @match.team2&.name || "Não definido" %></span>
              </div>
            </div>
            <div class="col-12">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Data da Partida:</span>
                <span class="fw-medium"><%= @match.created_at.strftime("%d de %B de %Y") %></span>
              </div>
            </div>
            <div class="col-12">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Horário:</span>
                <span class="fw-medium"><%= @match.created_at.strftime("%H:%M") %></span>
              </div>
            </div>
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted">Status:</span>
                <% if @match.is_simulated %>
                  <span class="badge bg-info">Simulada</span>
                <% elsif @match.result.present? %>
                  <span class="badge bg-primary"><%= @match.result %></span>
                <% else %>
                  <span class="badge bg-secondary">Pendente</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Teams Squad -->
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark mb-3">Elencos</h5>
          
          <% if @match.team1 %>
            <h6 class="text-muted"><%= @match.team1.name %></h6>
            <% active_contracts = @match.team1.player_contracts.where(is_expired: false) %>
            <% if active_contracts.any? %>
              <div class="list-group list-group-flush mb-3">
                <% active_contracts.includes(:player).limit(3).each do |contract| %>
                  <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-1">
                    <small><%= contract.player.name %></small>
                    <small class="text-muted">Rating: <%= contract.player.rating %></small>
                  </div>
                <% end %>
                <% if active_contracts.count > 3 %>
                  <div class="list-group-item px-0 py-1">
                    <small class="text-muted">... e mais <%= active_contracts.count - 3 %> jogadores</small>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted small">Nenhum jogador ativo</p>
            <% end %>
          <% end %>

          <% if @match.team2 %>
            <h6 class="text-muted"><%= @match.team2.name %></h6>
            <% active_contracts = @match.team2.player_contracts.where(is_expired: false) %>
            <% if active_contracts.any? %>
              <div class="list-group list-group-flush">
                <% active_contracts.includes(:player).limit(3).each do |contract| %>
                  <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-1">
                    <small><%= contract.player.name %></small>
                    <small class="text-muted">Rating: <%= contract.player.rating %></small>
                  </div>
                <% end %>
                <% if active_contracts.count > 3 %>
                  <div class="list-group-item px-0 py-1">
                    <small class="text-muted">... e mais <%= active_contracts.count - 3 %> jogadores</small>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted small">Nenhum jogador ativo</p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Match Actions -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm border-info">
        <div class="card-body">
          <h5 class="card-title fw-bold text-info mb-3">
            <i class="fas fa-cog me-2"></i>Ações da Partida
          </h5>
          <div class="d-flex gap-2 flex-wrap">
            <%= link_to "Editar Partida", edit_match_path(@match), class: "btn btn-warning" %>
            <% if !@match.is_simulated && @match.team1 && @match.team2 %>
              <%= button_to "Simular Partida", simulate_match_path(@match), 
                  method: :post,
                  class: "btn btn-success",
                  data: { turbo_confirm: "Deseja simular esta partida agora?" } %>
            <% elsif !@match.team1 || !@match.team2 %>
              <button class="btn btn-secondary" disabled>
                Adicione dois times para simular
              </button>
            <% end %>
            <%= link_to "Nova Simulação", new_simulation_matches_path, class: "btn btn-primary" %>
            <%= link_to "Excluir Partida", @match, 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta partida?" }, 
                class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>