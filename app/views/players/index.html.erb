<div class="py-4">
  <div class="mb-4 container">
    <h1 class="h2 fw-bold text-dark">
      <i class="fas fa-users me-2 text-primary"></i>Mercado de Jogadores
    </h1>
    <p class="text-muted mb-0">Conhe√ßa o mercado da bola e monte seu time</p>
  </div>

  <div class="mb-4 mx-5" data-controller="players-form">
    <button id="filter-button" class="btn btn-outline-primary mb-2"
    data-players-form-target="filterButton"
    data-action="click->players-form#toggleForm">Filtros</button>
    <%= render partial: 'form-filtros', locals: { q: @q } %>
  </div>

  <div class="mx-5 px-2 card shadow-sm" data-controller="tooltip">
    <div class="table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col" class="fw-bold text-muted small text-uppercase">Imagem</th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :name, "Nome") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :real_team_name, "Time Real") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :position, "Posi√ß√£o") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :goals, "Gols") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Assist√™ncias" data-bs-placement="top">
            <%= sort_link(@q, :assists, "SS") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Dribles bem Sucedidos" data-bs-placement="top"><%= sort_link(@q, :successful_dribbles, "DBS") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Intercepta√ß√µes" data-bs-placement="top"><%= sort_link(@q, :interceptions, "Int") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Cart√µes Amarelos" data-bs-placement="top"><%= sort_link(@q, :yellow_cards, "CA") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Cart√µes Vermelhos" data-bs-placement="top"><%= sort_link(@q, :red_cards, "CV") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Faltas Cometidas" data-bs-placement="top"><%= sort_link(@q, :faults_committed, "FC") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Perda de Posse de Bola" data-bs-placement="top"><%= sort_link(@q, :loss_of_possession, "PPB") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase" data-bs-toggle="tooltip" data-bs-title="Frequ√™ncia em Campo" data-bs-placement="top"><%= sort_link(@q, :frequency_in_field, "FCamp") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :rating, "Rating") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase"><%= sort_link(@q, :price, "Pre√ßo") %></th>
            <th scope="col" class="fw-bold text-muted small text-uppercase">A√ß√µes</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><img src="https://escudosfc.com.br/images/<%= team_logo(player.real_team_name) %>" alt="<%= player.real_team_name %>" width="50"></td>
              <td>
                <div class="fw-medium text-dark"><%= player.name %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.real_team_name %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.position %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.goals %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.assists %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.successful_dribbles %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.interceptions %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.yellow_cards %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.red_cards %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.faults_committed %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.loss_of_possession %></div>
              </td>
              <td>
                <div class="fw-medium text-dark"><%= player.frequency_in_field %>%</div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="fs-5 fw-bold text-primary me-2"><%= number_with_precision(player.rating, precision: 1) %></span>
                </div>
              </td>
              <td>
                <span class="fs-5 fw-bold text-success">üí∞<%= player.price %></span>
              </td>
              <td>
                <% cooldown = player.player_cooldowns.find_by(team: current_user.teams.first) %>
                <% if cooldown %>
                  <p class="badge bg-danger text-light mb-0 mt-3">Indispon√≠vel por:</p>
                  <p class="my-0"><%= cooldown.matches_remaining %> partidas</p>
                <% elsif player.is_on_market %>
                  <p class="badge bg-success bg-opacity-50 text-dark">Dispon√≠vel</p>
                  <% if current_user.wallet&.balance && current_user.wallet.balance >= player.price %>
                    <%= button_to 'Contratar', purchase_player_path(player), method: :post, class: "btn btn-sm btn-success",
                        data: { turbo_confirm: "Confirmar contrata√ß√£o de #{player.name} por $#{player.price}? Seu saldo atual √© $#{current_user.wallet&.balance || 0}." } %>
                  <% else %>
                    <button class="btn btn-sm btn-secondary" disabled>Saldo Insuficiente</button>
                  <% end %>
                <% else %>
                  <p class="badge bg-warning text-dark mb-0 mt-2">Contratado por:</p>
                  <p class="my-0"><%= player.player_contracts.where(is_expired: false).first&.team&.name || 'Time desconhecido' %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render partial: 'pagination', locals: { players: @players } %>
</div>
