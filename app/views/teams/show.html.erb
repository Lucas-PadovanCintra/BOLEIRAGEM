<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800"><%= @team.name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit Team", edit_team_path(@team), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Teams", teams_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Team Info -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Team Information</h2>
        <div class="space-y-3">
          <div>
            <span class="text-gray-600">Name:</span>
            <span class="font-medium"><%= @team.name %></span>
          </div>
          <div>
            <span class="text-gray-600">Owner:</span>
            <span class="font-medium"><%= @team.user.email %></span>
          </div>
          <div>
            <span class="text-gray-600">Created:</span>
            <span class="font-medium"><%= @team.created_at.strftime("%B %d, %Y") %></span>
          </div>
          <div>
            <span class="text-gray-600">Total Players:</span>
            <span class="font-medium"><%= @team.players.count %></span>
          </div>
          <div>
            <span class="text-gray-600">Active Contracts:</span>
            <span class="font-medium"><%= @team.player_contracts.where(is_expired: false).count %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Players List -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-gray-800">Squad</h2>
          <%= link_to "Add Player", new_player_contract_path, class: "bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded text-sm" %>
        </div>
        
        <% if @team.player_contracts.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rating</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Matches</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contract</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @team.player_contracts.includes(:player).each do |contract| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="font-medium text-gray-900"><%= contract.player.name %></div>
                      <div class="text-sm text-gray-500">ID: <%= contract.player.api_id %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= contract.player.rating %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= contract.matches_played %> / <%= contract.contract_length %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="w-full bg-gray-200 rounded-full h-2.5">
                        <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= (contract.matches_played.to_f / contract.contract_length * 100).round(1) %>%"></div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if contract.is_expired %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Expired</span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500 mb-4">No players in your squad yet.</p>
            <%= link_to "Sign Your First Player", new_player_contract_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Matches -->
  <div class="mt-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Matches</h2>
      <% if @team.matches.any? %>
        <div class="space-y-3">
          <% @team.matches.limit(5).each do |match| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <div>
                <span class="font-medium">Match #<%= match.id %></span>
                <span class="text-gray-600 ml-2"><%= match.created_at.strftime("%B %d, %Y") %></span>
              </div>
              <div>
                <% if match.result.present? %>
                  <span class="px-2 py-1 text-sm rounded bg-blue-100 text-blue-800"><%= match.result %></span>
                <% else %>
                  <span class="px-2 py-1 text-sm rounded bg-gray-100 text-gray-800">Pending</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No matches played yet.</p>
      <% end %>
    </div>
  </div>
</div>