<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-dark">My Wallet</h1>
    <div class="btn-group">
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addFundsModal">
        <i class="fas fa-plus me-1"></i>Add Funds
      </button>
      <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#withdrawFundsModal">
        <i class="fas fa-minus me-1"></i>Withdraw
      </button>
    </div>
  </div>

  <!-- Wallet Balance -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card bg-primary text-white shadow-lg">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h3 class="fw-light opacity-75 mb-1">Current Balance</h3>
              <h1 class="display-3 fw-bold mb-0">ðŸ’°<%= number_with_delimiter(@wallet.balance.round(0)) %></h1>
              <small class="opacity-75">Wallet ID: #<%= @wallet.id %></small>
            </div>
            <div class="col-md-4 text-md-end">
              <div class="display-1 opacity-25">
                <i class="fas fa-wallet"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-arrow-up text-success fs-2 mb-2"></i>
          <h4 class="fw-bold text-success">+0</h4>
          <small class="text-muted">This Month Income</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-arrow-down text-danger fs-2 mb-2"></i>
          <h4 class="fw-bold text-danger">-0</h4>
          <small class="text-muted">This Month Spending</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-users text-info fs-2 mb-2"></i>
          <h4 class="fw-bold text-info"><%= current_user.teams.sum { |t| t.player_contracts.where(is_expired: false).count } %></h4>
          <small class="text-muted">Active Players</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-trophy text-warning fs-2 mb-2"></i>
          <h4 class="fw-bold text-warning"><%= current_user.teams.sum { |t| t.matches.count } %></h4>
          <small class="text-muted">Total Matches</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <!-- Recent Transactions -->
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark mb-3">Recent Transactions</h5>
          <!-- Mock transaction data since there's no transaction model -->
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
              <div class="d-flex align-items-center">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                  <i class="fas fa-plus"></i>
                </div>
                <div>
                  <div class="fw-medium">Initial Deposit</div>
                  <small class="text-muted">Welcome bonus</small>
                </div>
              </div>
              <div class="text-end">
                <div class="fw-bold text-success">+<%= number_with_delimiter(@wallet.balance.round(0)) %></div>
                <small class="text-muted"><%= @wallet.created_at.strftime("%b %d, %Y") %></small>
              </div>
            </div>
            
            <!-- Example transactions for visual purposes -->
            <div class="list-group-item d-flex justify-content-between align-items-center px-0 opacity-50">
              <div class="d-flex align-items-center">
                <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                  <i class="fas fa-user"></i>
                </div>
                <div>
                  <div class="fw-medium">Player Contract</div>
                  <small class="text-muted">Example transaction</small>
                </div>
              </div>
              <div class="text-end">
                <div class="fw-bold text-danger">-50,000</div>
                <small class="text-muted">Future transaction</small>
              </div>
            </div>

            <div class="list-group-item d-flex justify-content-between align-items-center px-0 opacity-50">
              <div class="d-flex align-items-center">
                <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                  <i class="fas fa-trophy"></i>
                </div>
                <div>
                  <div class="fw-medium">Match Winnings</div>
                  <small class="text-muted">Victory bonus</small>
                </div>
              </div>
              <div class="text-end">
                <div class="fw-bold text-success">+25,000</div>
                <small class="text-muted">Future transaction</small>
              </div>
            </div>
          </div>
          
          <div class="text-center mt-3">
            <small class="text-muted">Transaction history feature coming soon!</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Wallet Actions -->
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark mb-3">Quick Actions</h5>
          <div class="d-grid gap-2">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addFundsModal">
              <i class="fas fa-plus me-2"></i>Add Funds
            </button>
            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#withdrawFundsModal">
              <i class="fas fa-minus me-2"></i>Withdraw Funds
            </button>
            <hr>
            <%= link_to "View Available Players", players_path, class: "btn btn-outline-primary" %>
            <%= link_to "Manage Teams", teams_path, class: "btn btn-outline-success" %>
            <%= link_to "View Contracts", player_contracts_path, class: "btn btn-outline-info" %>
          </div>
        </div>
      </div>

      <!-- Spending Categories -->
      <div class="card shadow-sm mt-4">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark mb-3">Spending Overview</h5>
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <small>Player Contracts</small>
              <small>70%</small>
            </div>
            <div class="progress" style="height: 6px;">
              <div class="progress-bar bg-primary" role="progressbar" style="width: 70%"></div>
            </div>
          </div>
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <small>Team Management</small>
              <small>20%</small>
            </div>
            <div class="progress" style="height: 6px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: 20%"></div>
            </div>
          </div>
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <small>Match Fees</small>
              <small>10%</small>
            </div>
            <div class="progress" style="height: 6px;">
              <div class="progress-bar bg-warning" role="progressbar" style="width: 10%"></div>
            </div>
          </div>
          <small class="text-muted">Based on typical fantasy football spending patterns</small>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Funds Modal -->
<div class="modal fade" id="addFundsModal" tabindex="-1" aria-labelledby="addFundsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="addFundsModalLabel">Add Funds to Wallet</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="addAmount" class="form-label">Amount to Add</label>
            <div class="input-group">
              <span class="input-group-text">ðŸ’°</span>
              <input type="number" class="form-control" id="addAmount" placeholder="Enter amount" min="1" step="1">
            </div>
          </div>
          <div class="mb-3">
            <label for="paymentMethod" class="form-label">Payment Method</label>
            <select class="form-select" id="paymentMethod">
              <option value="">Select payment method</option>
              <option value="credit_card">Credit Card</option>
              <option value="paypal">PayPal</option>
              <option value="bank_transfer">Bank Transfer</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" onclick="addFunds()">Add Funds</button>
      </div>
    </div>
  </div>
</div>

<!-- Withdraw Funds Modal -->
<div class="modal fade" id="withdrawFundsModal" tabindex="-1" aria-labelledby="withdrawFundsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="withdrawFundsModalLabel">Withdraw Funds</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="withdrawAmount" class="form-label">Amount to Withdraw</label>
            <div class="input-group">
              <span class="input-group-text">ðŸ’°</span>
              <input type="number" class="form-control" id="withdrawAmount" placeholder="Enter amount" min="1" max="<%= @wallet.balance %>" step="1">
            </div>
            <div class="form-text">Maximum: <%= number_with_delimiter(@wallet.balance.round(0)) %></div>
          </div>
          <div class="mb-3">
            <label for="withdrawMethod" class="form-label">Withdrawal Method</label>
            <select class="form-select" id="withdrawMethod">
              <option value="">Select withdrawal method</option>
              <option value="bank_transfer">Bank Transfer</option>
              <option value="paypal">PayPal</option>
              <option value="check">Check</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-warning" onclick="withdrawFunds()">Withdraw Funds</button>
      </div>
    </div>
  </div>
</div>

<script>
  function addFunds() {
    const amount = document.getElementById('addAmount').value;
    const method = document.getElementById('paymentMethod').value;
    
    if (!amount || !method) {
      alert('Please fill in all fields');
      return;
    }
    
    if (amount < 1) {
      alert('Amount must be at least 1');
      return;
    }
    
    // This would normally submit to the server to process the payment
    alert(`Would add ${amount} funds using ${method}. Implement the actual payment logic in the controller.`);
    bootstrap.Modal.getInstance(document.getElementById('addFundsModal')).hide();
  }
  
  function withdrawFunds() {
    const amount = document.getElementById('withdrawAmount').value;
    const method = document.getElementById('withdrawMethod').value;
    
    if (!amount || !method) {
      alert('Please fill in all fields');
      return;
    }
    
    if (amount < 1 || amount > <%= @wallet.balance %>) {
      alert('Invalid withdrawal amount');
      return;
    }
    
    // This would normally submit to the server to process the withdrawal
    alert(`Would withdraw ${amount} funds using ${method}. Implement the actual withdrawal logic in the controller.`);
    bootstrap.Modal.getInstance(document.getElementById('withdrawFundsModal')).hide();
  }
</script>
